{
  "extends": "../../tsconfig.json",
  "references": [{ "path": "../../domain" }],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "composite": true,
    "typeRoots": ["./src"],
    "paths": {
      "@/*": ["./src/*"],
      "@domain/*": ["../../domain/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
