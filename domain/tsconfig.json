{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@entities/*": ["src/entities/*"],
      "@services/*": ["src/services/*"],
      "@use-cases/*": ["src/use-cases/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"]
}
